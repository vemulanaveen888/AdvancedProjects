<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
	id="WebApp_ID" version="4.0">
	<display-name>web-app-one</display-name>

	<!-- ServletContextListener implementation -->
	 <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
       <!--  [/WEB-INF/applicationContext.xml] -->
    </listener>
    
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/rootconfig/app-context.xml</param-value>
    </context-param>
    
    
	<servlet>
		<servlet-name>app</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<!-- /WEB-INF/app-servlet.xml  ( This is a spring bean configuration file )-->
		
		<init-param>
            <param-name>contextConfigLocation</param-name>
            <param-value>/WEB-INF/webconfig/web-servlet-config.xml</param-value>
        </init-param>
        
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>app</servlet-name>
		<url-pattern>/app/*</url-pattern>
	</servlet-mapping>

</web-app>